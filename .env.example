# Operabot Environment Variables Template
# Copy this file to .env and fill in your values

# === Telegram ===
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here

# === OpenAI ===
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=2000

# === Database ===
DB_HOST=localhost
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=your_db_name
DB_PORT=3306
DB_POOL_MIN=1
DB_POOL_MAX=50
DB_AUTOCOMMIT=true

# === Admin Panel (Bootstrap Admins) ===
# Set at least one of these for the first admin
SUPREME_ADMIN_ID=123456789  # Telegram user ID
SUPREME_ADMIN_USERNAME=your_username  # Telegram username (without @)

# Dev Admin (optional, same rights as Supreme)
DEV_ADMIN_ID=987654321
DEV_ADMIN_USERNAME=dev_username

# === Task Queue ===
TASK_WORKERS=3
TASK_QUEUE_MAX_SIZE=50
TASK_MAX_RETRIES=3
TASK_RETRY_BASE_DELAY=5.0
TASK_RETRY_BACKOFF=2.0
TASK_RETRY_MAX_DELAY=60.0

# === Scheduler ===
REPORT_SEND_TIME=18:00

# === Logging ===
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# === Optional ===
SENTRY_DSN=
